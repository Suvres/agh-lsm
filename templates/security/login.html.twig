{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="row">
    <div class="card border-dark col-lg-6 bg-light p-0 mx-auto">
        <div class="card-header bg-light d-flex align-middle align-items-center">
            <img src="img/icon1024px.png" alt="icon" width="45" height="45">
            <h3 class="flex-fill font-weight-bold m-0">Zaloguj się</h3>
        </div>
        <div class="card-body">
            <form method="post" >
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label font-weight-bold" for="inputEmail">Login</label>
                    <div class="col-sm-10">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-2 font-weight-bold" for="inputPassword">Hasło</label>
                    <div class="col-sm-10">
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button class="btn btn-sm btn-success w-100" type="submit">Zaloguj się</button>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">
            </form>
        </div>
    </div>
</div>
{% endblock %}
